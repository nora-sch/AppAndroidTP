<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/page_padding">

    <TextView
        android:id="@+id/memo_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/marg_dice"
        android:textSize="@dimen/memo_text"
        android:textColor="@color/dark_blue"
        android:text="Memo"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/delete_memo"
        />

    <ImageButton
        android:id="@+id/delete_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:background="@color/white"
        android:src="@drawable/delete_icon"
        app:layout_constraintBottom_toBottomOf="@+id/memo_item"
        app:layout_constraintLeft_toRightOf="@+id/memo_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/memo_item" />


</androidx.constraintlayout.widget.ConstraintLayout>